{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  // To give you an idea how to override rule options:
  "rules": {
    "curly": 0,
    "key-spacing": 0,
    "consistent-return": 0,
    "new-cap": [1, { "capIsNew": false }]
  },
  "env": {
    "node": true,
    "browser": true
  },
  "globals": {
    "Promise": true
  }
}